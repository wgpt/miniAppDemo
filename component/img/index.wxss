

.hide{
    display: none;
}

.bt{
    margin: 0;
    padding: 0;
    border-radius: 0;
    border: 0;
    box-shadow: none;
    background-color: initial;
    width: 100%;
    height: 30rpx;
    min-width: 30rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #666;
}

.bt:after{
    border: none;
}

.img{
    max-width: 100%;
    max-height: 100%;
    opacity: 0;
    transition: .5s;
}

.tran{
    opacity: 1;
}