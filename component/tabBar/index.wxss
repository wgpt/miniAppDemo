

.basebar_box {
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-top: 1rpx solid #ddd;
}

.basebar_box .bar{
    flex: 1;
}

.basebar_box image {
    margin-top: 10rpx;
    margin-bottom: 8rpx;
}

button.btns {
    line-height: 1;
    padding-left: 0;
    padding-right: 0;
    border: none;
    font-size: 25rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: 0.5s;
}

.btns image{
    width:48rpx;
    height:48rpx;
    display:inline-block;
}

.btns .select{
    color: #BA3809;
}