.box{
    position: fixed;
    z-index: 99999;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.bg{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0;
}


.slot{
    position: relative;
    max-width: 100%;
    max-height: 95%;
    overflow: auto;
    z-index: 2;
    opacity: 0;
}

