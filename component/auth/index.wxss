/********************************************************* 获取用户信息授权提示窗口 */
.userinfo_box {
  width: 650rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
  padding-top: 75rpx;
  background-color: #fff;
}

.userinfo_box image{
  width: 388rpx;
  height: 295rpx;
}

.userinfo_box .tx{
  display: block;
  width: 100%;
  text-align: center;
  color: #333;
  font-size: 30rpx;
  margin: 60rpx 0 80rpx 0;
}

.userinfo_box .bt{
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.userinfo_box .bt button,.userinfo_box .bt view{
  width: 250rpx;
  height: 95rpx;
  line-height: 95rpx;
  font-size: 30rpx;
  text-align: center;
  border-radius: 60rpx;
}

.userinfo_box .bt button{
  background: linear-gradient(#1AB987, #1A98A2);
  color: #fff;
}

.userinfo_box .bt view{
  border: 1rpx solid #DCDBDC;
  background-color: #FBFAFC;
  color: #333333;
}