
/*----效果---*/
@keyframes trunLeft{
  from{
    transform: translate(-100%,0);
  }
  to{
    transform: translate(0,0);
  }
}
@keyframes trunOutLeft{
    from{
        transform: translate(0,0);
    }
    to{
        transform: translate(-100%,0);
    }
}

@keyframes trunRight{
    from{
        transform: translate(100%,0);
    }
    to{
        transform: translate(0,0);
    }
}


@keyframes trunUp{
  from{
    transform: translate(0,100%);
  }
  to{
    transform: translate(0,0);
  }
}

@keyframes trunDown{
  from{
    transform: translate(0,-100%);
  }
  to{
    transform: translate(0,0);
  }
}

@keyframes scale {
  from{
    transform: scale(0,0);
  }
  to{
    transform: scale(1,1);
  }

}

@keyframes scaleH {
    from{
        transform: scale(1,1);
    }
    to{
        transform: scale(0,0);
        visibility: hidden;
    }

}


@keyframes fadeIn {
    from{
        opacity: 0;
    }
    to{
        opacity: 1;
    }

}

@keyframes closeDown {
     from{
         transform: translate(0,0);
     }
     to{
         transform: translate(0,100vh);
     }

 }

@keyframes modalOut{
    from{
        opacity: 1;
    }
    to{
        opacity: 0;
    }

}